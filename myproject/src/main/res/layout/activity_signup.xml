<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorPrimary"
    tools:context="com.example.myapplication.activity.SignupActivity">
    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:orientation="vertical"
        android:layout_margin="20dp"
        android:gravity="center">
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/welcome"
            android:layout_gravity="center"
            android:layout_marginBottom="10dp"/>
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            >
            <ImageView
                android:id="@+id/image_SignupUserName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/username"/>
            <EditText
                android:id="@+id/et_SignupUserName"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:background="@null"
                android:layout_toRightOf="@+id/image_SignupUserName"
                android:layout_alignTop="@+id/image_SignupUserName"
                android:layout_alignBottom="@+id/image_SignupUserName"
                android:layout_marginLeft="20dp"
                android:hint="请输入用户账号"
                android:textColorHint="#80F8F8FF"
                android:textColor="#ffffff"
                android:textCursorDrawable="@null"/>
        </RelativeLayout>
        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="#80F8F8FF"
            android:layout_marginTop="15dp"
            android:layout_marginBottom="15dp"/>
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <ImageView
                android:id="@+id/image_SignupUserPassword"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/password"/>
            <EditText
                android:id="@+id/et_SignupUserPassword"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:background="@null"
                android:layout_toRightOf="@+id/image_SignupUserPassword"
                android:layout_alignTop="@+id/image_SignupUserPassword"
                android:layout_alignBottom="@+id/image_SignupUserPassword"
                android:layout_marginLeft="20dp"
                android:inputType="numberPassword"
                android:hint="请输入用户密码"
                android:textColorHint="#80F8F8FF"
                android:textColor="#ffffff"
                android:textCursorDrawable="@null"/>
        </RelativeLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="#80F8F8FF"
            android:layout_marginTop="15dp"
            android:layout_marginBottom="15dp"/>
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <ImageView
                android:id="@+id/image_SignupUserRegion"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/region"/>
            <EditText
                android:id="@+id/et_SignupUserRegion"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:background="@null"
                android:layout_toRightOf="@+id/image_SignupUserRegion"
                android:layout_alignTop="@+id/image_SignupUserRegion"
                android:layout_alignBottom="@+id/image_SignupUserRegion"
                android:layout_marginLeft="20dp"
                android:hint="请输入用户所在地"
                android:textColorHint="#80F8F8FF"
                android:textColor="#ffffff"
                android:textCursorDrawable="@null"/>

        </RelativeLayout>

