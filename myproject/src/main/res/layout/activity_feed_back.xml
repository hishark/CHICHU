<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.example.myapplication.activity.FeedBackActivity">
    <android.support.v7.widget.Toolbar
        android:id="@+id/feddback_toolbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#8FBC8F"
        app:contentInsetStart="0dp">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal"
            >
            <Button
                android:id="@+id/bt_feedback_back"
                android:background="@drawable/back64"
                android:layout_width="40dp"
                android:layout_height="40dp"
                />
        </LinearLayout>
    </android.support.v7.widget.Toolbar>

    <EditText
        android:id="@+id/et_advice"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_margin="16dp"
        android:paddingTop="10dp"
        android:background="@drawable/selector_edittext"
        android:gravity="left|top"
        android:hint="来一点有营养的建议吧"
        android:inputType="textMultiLine"
        android:minLines="8"
        android:paddingLeft="4dip"
        android:paddingRight="4dip">

    </EditText>


    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:orientation="horizontal">

        <Button
            android:layout_marginRight="20dp"
            android:id="@+id/bt_advice"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="提交"
            android:textSize="15sp"
            android:layout_gravity="center"
            android:padding="8dp"
            android:textColor="#8FBC8F"
            android:background="@drawable/selector_button_test1"/>
    </LinearLayout>

</LinearLayout>
