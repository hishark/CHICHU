<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorPrimary"
    tools:context="com.example.myapplication.activity.LoginActivity">


    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:orientation="vertical"
        android:layout_margin="20dp"
        android:gravity="center">
        <ImageView
            android:layout_width="150dp"
            android:layout_height="150dp"
            android:src="@drawable/logo"
            android:layout_gravity="center"
            android:layout_marginBottom="25dp"/>
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            >
            <ImageView
                android:id="@+id/image_UserName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/username"/>
            <EditText
                android:id="@+id/et_loginUserName"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:background="@null"
                android:layout_toRightOf="@+id/image_UserName"
                android:layout_alignTop="@+id/image_UserName"
                android:layout_alignBottom="@+id/image_UserName"
                android:layout_marginLeft="20dp"
                android:hint="请输入用户账号"
                android:textColorHint="#80F8F8FF"
                android:textColor="#ffffff"
                android:textCursorDrawable="@null"/>
        </RelativeLayout>
        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="#80F8F8FF"
            android:layout_marginTop="15dp"
            android:layout_marginBottom="15dp"/>
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <ImageView
                android:id="@+id/image_UserPassword"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/password"/>
            <EditText
                android:id="@+id/et_loginUserPassword"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:background="@null"
                android:layout_toRightOf="@+id/image_UserPassword"
                android:layout_alignTop="@+id/image_UserPassword"
                android:layout_alignBottom="@+id/image_UserPassword"
                android:layout_marginLeft="20dp"
                android:inputType="numberPassword"
                android:hint="请输入用户密码"
                android:textColorHint="#80F8F8FF"
                android:textColor="#ffffff"
                android:textCursorDrawable="@null"/>

        </RelativeLayout>
        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="#80F8F8FF"
            android:layout_marginBottom="15dp"
            android:layout_marginTop="15dp"/>
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <Button
                android:id="@+id/bt_login"
                android:background="@drawable/button_login"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:text="登  录"
                android:textColor="@color/colorPrimary"
                android:textSize="15sp"/>
            <!--<TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="15dp"
                android:layout_below="@+id/bt_login"
                android:layout_alignLeft="@+id/bt_login"
                android:text="忘记密码"
                android:textColor="#ffffff"/>-->
            <TextView
                android:id="@+id/text_login"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="15dp"
                android:layout_alignRight="@+id/bt_login"
                android:layout_below="@+id/bt_login"
                android:text="创建账号>>>"
                android:textColor="#ffffff"/>
        </RelativeLayout>
    </LinearLayout>


</android.support.constraint.ConstraintLayout>
